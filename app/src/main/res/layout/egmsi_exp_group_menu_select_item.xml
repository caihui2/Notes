<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/gim_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_all_note_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dip"
        />
    <TextView
        android:id="@+id/gtv_menu_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gim_menu_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="首页"/>
    <ImageView
        android:id="@+id/gim_menu_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dip"
        android:src="@drawable/menu_more_expand"
        android:layout_toRightOf="@id/gtv_menu_item_name"
        />
</RelativeLayout>
